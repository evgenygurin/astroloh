# Development Dockerfile - optimized for fast rebuilds
FROM python:3.12-slim

# Set environment variables for development
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PYTHONPATH=/app

# Install system dependencies (kept minimal for faster builds)
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create development user
RUN groupadd --gid 1001 astroloh && \
    useradd --uid 1001 --gid 1001 --create-home --shell /bin/bash astroloh

# Set working directory
WORKDIR /app
RUN chown -R astroloh:astroloh /app

# Copy dependency files first for better caching
COPY --chown=astroloh:astroloh requirements.txt pyproject.toml ./

# Install Python dependencies with development tools
RUN pip install --upgrade pip &&     pip install -r requirements.txt &&     pip install watchfiles python-multipart pyswisseph

# Switch to development user
USER astroloh

# Create directories
RUN mkdir -p /app/swisseph /app/logs

# Copy application code
COPY --chown=astroloh:astroloh . .

# Health check for development
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=2 \
    CMD curl -f http://localhost:8000/health || exit 1

# Expose port
EXPOSE 8000

# Development command with auto-reload
CMD ["uvicorn", "app.main:app", \
     "--host", "0.0.0.0", \
     "--port", "8000", \
     "--reload", \
     "--log-level", "debug"]