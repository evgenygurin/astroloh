# Основные настройки приложения
DEBUG=false
HOST=0.0.0.0
PORT=8000

# База данных PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/astroloh

# Яндекс Диалоги
YANDEX_SKILL_ID=your_skill_id_here
YANDEX_OAUTH_TOKEN=your_oauth_token_here

# Секретные ключи для безопасности (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ В ПРОДАКШЕНЕ!)
SECRET_KEY=your-super-secret-key-change-in-production-must-be-32-chars-minimum
ENCRYPTION_KEY=your-encryption-key-for-personal-data-32-chars-minimum

# Астрологические вычисления
SWISS_EPHEMERIS_PATH=/app/swisseph

# Логирование
LOG_LEVEL=INFO

# Настройки безопасности
SESSION_TIMEOUT_HOURS=24
DATA_RETENTION_DAYS=365
AUTO_CLEANUP_ENABLED=true

# GDPR и соответствие
GDPR_CONTACT_EMAIL=privacy@yourdomain.com
DATA_CONTROLLER_NAME=Astroloh Skill Service
PRIVACY_POLICY_URL=https://yourdomain.com/privacy

# Мониторинг и аналитика
ENABLE_ANALYTICS=false
SENTRY_DSN=your_sentry_dsn_here